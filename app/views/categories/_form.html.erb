<div class="container"><hr>
  
  <h3>Complete the category</h3>
  <hr>

  <div class="dropdown">
  <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    Menu
  </button>
  <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
    <a class="dropdown-item" href="#"><%= link_to 'Markers', markers_path %> </a>
    <a class="dropdown-item" href="#"><%= link_to 'Types', types_path %> </a>
    <a class="dropdown-item" href="#"><%= link_to 'Api Json', api_json_path %> </a>
  </div>
 <%= link_to 'Dashboard', root_path %> 
</div>

 

  <hr>


  <%= form_with(model: category, remote: true, data: { confirm: 'Â¿Desea confirmar?'}) do |form| %>
    <% if category.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(category.errors.count, "error") %> prohibited this category from being saved:</h2>

        <ul>
        <% category.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>
    <table class="table table-striped">
      <thead>
        <tr>
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Complete</th>
          <th scope="col">Description</th>
        </tr>
      </thead>
      <tbody>
        <tr>
          <th scope="row">1</th>
          <td> <%= form.label :name %> </td>
          <td> <%= form.text_field :name %> </td>
          <td>Name category</td>
        </tr>
        <tr>
          <th scope="row">2</th>
          <td> <%= form.label :type_id %> </td>
          <td> <%= form.collection_select :type_id , Type.all, :id, :name, prompt: true  %> </td>
          <td> Category type</td>
        </tr>
        <tr>
          <th scope="row">3</th>
          <td> <%= form.label :public %> </td>
          <td> <%= form.select :public,[false,true] %> </td>
          <td> Select privacy</td>
        </tr>
        <tr>
          <th scope="row"></th>
          <td> <div class="actions"> </td>
          <td><button type="button" class="btn btn-success"><%= form.submit data: {disable_with: "Creando"} %> </button></td>
        </tr>
      </tbody>
    </table>

  <% end %>
</div>